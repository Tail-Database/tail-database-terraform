{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "module": "es2022",
        "sourceMap": true,
        "moduleResolution": "node",
        "types": [
            "@cloudflare/workers-types"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
    },
    "include": ["./src/*.ts"],
    "exclude": [
        "./node_modules",
        "./test",
    ]
}